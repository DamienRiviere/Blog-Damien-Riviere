{% extends 'layout/default.html.twig' %}

{% block title %}{{ post.title }} - Blog Damien Riviere{% endblock %}

{% block body %}
    <div class="container-fluid bg-light py-5 text-center section-title">
        <h1 class="text-danger h2">{{ post.title }}</h1>
        <p class="font-weight-bold mb-0">Publié le {{ post.created_at | date("d/m/Y") }} à {{ post.created_at | date("H:i") }}</p>
        {% for category in post.getCategories()  %}
            <a href="/post/category/{{ category.id }}/{{ category.slug }}" class="{{ category.style }} text-white">{{ category.name }}</a>
        {% endfor %}
    </div>
    
    <div class="container">

        {% include 'layout/alert.html.twig' %}

        <div class="row">

            <!-- Post Content Column -->
            <div class="col-lg-8">

                <!-- Preview Image -->
                <img class="img-fluid rounded mt-4" src="{{ post.cover_image }}" alt="">

                <hr>

                <!-- Post Content -->
                <p class="lead">{{ post.introduction }}</p>

                <p>{{ post.content }}</p>

                <hr>

                <div class="row">
                {% set user = post.getUser() %}
                    <div class="col-1 img-author-article">
                        <img src="{{ user.picture }}" class="avatar avatar-medium" alt="Avatar de Damien">
                    </div>
                    <div class="col-lg col-md col-sm-12 article-author">
                        <h5 class="mb-0"> 
                            <a href="#" class="text-danger"><strong>{{ user.name }}</strong></a>
                        </h5>
                        {% if post.modify_at != null %}
                            <p class="small text-muted mb-0">Modifié le {{ post.modify_at | date("d/m/Y") }} à {{ post.modify_at | date("H:i") }}</p>
                        {% endif %}
                        <span class="badge badge-primary">80 articles</span>
                        <span class="badge badge-warning text-white">390 messages</span>
                    </div>
                </div>

                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header"><i class="fas fa-comment"></i> Laisser un commentaire :</h5>
                    <div class="card-body">
                        <form action="/post/{{ post.id }}/{{ post.slug }}/new-comment" method="post">
                            <div class="form-group">
                                <textarea class="form-control" rows="5" name="content"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </form>
                    </div>
                </div>

                <br>

                {% if post.getComments() == null %}
                        <div class="alert alert-secondary">
                            Aucun commentaire sur cette article
                        </div>
                {% else %}
                    <!-- Comment -->
                    {% for comment in post.getComments() %}
                        {% set user = comment.getUser() %}
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle avatar avatar-medium" src="{{ user.picture }}" alt="">
                            <div class="media-body">
                                <h5 class="mt-0 font-weight-bold"><a href="#" class="name-style">{{ user.name }}</a></h5>
                                {{ comment.content }}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Search</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>

                {% include 'layout/categories.html.twig' %}

            </div>

        </div>

    </div>
{% endblock %}