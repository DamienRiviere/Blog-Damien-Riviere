{% extends 'layout/default.html.twig' %}

{% block title %}Profil de {{ user.name }}{% endblock %}

{% block body %}
    <div class="container-fluid bg-light py-5 text-center section-title">
        <h2 class="text-danger">{{ user.name }}</h2>
        <p class="font-weight-bold mb-0">
            {% if user.roleId == 1 %}
                Administrateur
            {% elseif user.roleId == 2 %}
                Membre
            {% endif %}
        </p>
        {% if user.roleId == 1 %}
            <span class="badge badge-primary">{{ countPosts }} articles</span>
            <span class="badge badge-warning text-white">{{ countComments }} commentaires</span>
        {% elseif user.roleId == 2 %}
            <span class="badge badge-warning text-white">{{ countComments }} commentaires</span>
        {% endif %}
    </div>

    <div class="container">

            <div class="col-md-12 my-4 d-flex justify-content-center">
                <!-- Profile -->
                <div class="card" style="max-width: 700px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{ user.picture }}" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ user.name }} |
                                    {% if user.roleId == 1 %}
                                        <span class="text-danger">Admin</span>
                                    {% elseif user.roleId == 2 %}
                                        <span class="text-primary">Membre</span>
                                    {% endif %}
                                </h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                                    additional content. This content is a little bit longer.</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Compte créé le
                                        {{ user.createdAt| date("d/m/Y") }} à
                                        {{ user.createdAt | date("H:i") }}
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </div>
{% endblock %}