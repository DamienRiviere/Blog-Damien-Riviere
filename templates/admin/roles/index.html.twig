{% extends 'admin/layout/default.html.twig' %}

{% block title %}Liste des rôles - Administration{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Liste des rôles</li>
    </ol>

    {% include 'admin/layout/alert.html.twig' %}

    <!-- Table Posts -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Tous les rôles
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Pseudo</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Pseudo</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody class="text-center">
                        {% for role in roles %}
                        <tr>
                            <td>{{ role.id }}</td>
                            <td>{{ role.name }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="#" class="btn btn-md btn-secondary" title="Modifier le rôle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-md btn-danger delete-link" title="Supprimer le rôle" data-toggle="modal" data-target="#delModal" data-id={{ role.id }}>
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted"></div>
    </div>

    {% include 'admin/layout/modal_delete.html.twig' %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="/js/modal.js"></script>
    {% endblock %}
{% endblock %}