{% extends 'admin/layout/default.html.twig' %}

{% block title %}Liste des catégories - Administration{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Liste des catégories</li>
    </ol>

    {% include 'admin/layout/alert.html.twig' %}

    <!-- Table Posts -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Toutes les catégories
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Style</th>
                            <th>Slug</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Style</th>
                            <th>Slug</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody class="text-center">
                        {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td><span class="{{ category.style }} text-white">{{ category.name }}</span></td>
                            <td>{{ category.style }}</td>
                            <td>{{ category.slug }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/post/category/{{ category.id }}/{{ category.slug }}" class="btn btn-md btn-primary" title="Voir l'article" target="_blank">
                                        <i class="fas fa-search"></i>
                                    </a>
                                    <a href="/admin/category/edit/{{ category.id }}" class="btn btn-md btn-secondary" title="Modifier la catégorie">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-md btn-danger delete-article" title="Supprimer la catégorie" data-toggle="modal" data-target="#delModal" data-id={{ category.id }}>
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Mis à jour le {{ post.created_at| date("d/m/Y") }} à {{ post.created_at | date("H:i") }}</div>
    </div>
{% endblock %}