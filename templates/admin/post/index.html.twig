{% extends 'admin/layout/default.html.twig' %}

{% block title %}Liste des articles - Administration{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Articles</a>
        </li>
        <li class="breadcrumb-item active">Gestion des articles</li>
    </ol>
    
    {% if get['created'] or get['edit'] %}
        <div class="alert alert-success">
            L'article a bien été 
            {% if get['created'] %}
                créé
            {% elseif get['edit'] %} 
                modifié
            {% endif %} 
        </div>
    {% endif %}

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Tous les articles
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Auteur</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Auteur</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody class="text-center">
                        {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>PHP</td>
                            <td>Damien</td>
                            <td>{{ post.created_at| date("d/m/Y") }} à {{ post.created_at | date("H:i") }}</td>
                            <td>
                                <a href="/post/{{ post.id }}/{{ post.slug }}" class="btn btn-md btn-primary" title="Voir l'article" target="_blank">
                                    <i class="fas fa-search"></i>
                                </a>
                                <a href="/admin/post/edit/{{ post.id }}" class="btn btn-md btn-secondary" title="Modifier l'article">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="" class="btn btn-md btn-danger" title="Supprimer l'article">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Mis à jour le {{ post.created_at| date("d/m/Y") }} à {{ post.created_at | date("H:i") }}</div>
    </div>


{% endblock %}