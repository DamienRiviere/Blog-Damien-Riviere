{% extends 'admin/layout/default.html.twig' %}

{% block title %}Commentaires de {{ post.title }} - Administration{% endblock %}

{% block body %}
<ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin/posts">Liste des articles</a>
        </li>
        <li class="breadcrumb-item active">Commentaires de {{ post.title }}</li>
    </ol>
    
    {% include 'admin/layout/alert.html.twig' %}

    <!-- Table Posts -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Commentaires de {{ post.title }}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Commentaire</th>
                            <th>Auteur</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Commentaire</th>
                            <th>Auteur</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody class="text-center">
                        {% for comment in post.getComments() %}
                            {% set user = comment.getUser() %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.content }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ comment.created_at | date("d/m/Y") }} à {{ comment.created_at | date("H:i") }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Mis à jour le {{ post.created_at| date("d/m/Y") }} à {{ post.created_at | date("H:i") }}</div>
    </div>

    {% include 'admin/layout/modal_delete.html.twig' %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="/js/modal.js"></script>
    {% endblock %}
{% endblock %}