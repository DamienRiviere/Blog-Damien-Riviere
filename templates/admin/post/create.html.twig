{% extends 'admin/layout/default.html.twig' %}

{% block title %}Créer un article - Administration{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Liste des articles</a>
        </li>
        <li class="breadcrumb-item active">Nouvel article</li>
    </ol>

    <form action="/admin/post/new" method="post">
        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="alert bg-light">
                    <h2 class="h5 mb-3">Informations générales</h2>
                    <div class="form-group">
                        <label for="title">Titre</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Titre" required>
                    </div>
                    <div class="form-group">
                        <label for="introduction">Introduction</label>
                        <textarea class="form-control" name="introduction" id="introduction" cols="30" rows="7" placeholder="Ecrivez l'introduction" required></textarea>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="alert bg-light">
                    <h2 class="h5 mb-3">Autres informations</h2>
                    <div class="form-group">
                        <label for="image">Image de l'article</label>
                        <input type="text" class="form-control" name="image" id="image" placeholder="URL de l'image" required>
                    </div>
                    <div class="form-group">
                        <label for="categories">Choix des catégories</label>
                        <select name="categories[]" id="categories" class="form-control" required multiple size="{{ categories | length }}">
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="alert bg-light">
            <h2 class="h5">Contenu de l'article</h2>
            <div class="form-group">
                <textarea class="form-control" name="content" cols="30" rows="10" placeholder="Ecrivez le contenu" required></textarea>
            </div>
        </div>

        <div class="text-center mb-3">
            <button type="submit" class="btn btn-success">Envoyer</button>
        </div>
    </form>
{% endblock %}