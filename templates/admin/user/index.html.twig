{% extends 'admin/layout/default.html.twig' %}

{% block title %}Liste des utilisateurs - Administration{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Liste des utilisateurs</li>
    </ol>

    {% include 'admin/layout/alert.html.twig' %}

    <!-- Table Posts -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Tous les utilisateurs
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Pseudo</th>
                            <th>Email</th>
                            <th>Slug</th>
                            <th>Date</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="text-center">
                        <tr>
                            <th>#</th>
                            <th>Pseudo</th>
                            <th>Email</th>
                            <th>Slug</th>
                            <th>Date</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody class="text-center">
                        {% for user in users %}
                        {% set role = user.getRole() %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.slug }}</td>
                            <td>{{ user.created_at| date("d/m/Y") }}</td>
                            <td>
                                <span 
                                class="
                                    {% if role.name == "Admin" %}
                                        text-danger
                                    {% elseif role.name == "Membre" %}
                                        text-primary
                                    {% endif %}"
                                >
                                    {{ role.name }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="" class="btn btn-md btn-primary" title="Voir l'article" target="_blank">
                                        <i class="fas fa-search"></i>
                                    </a>
                                    <a href="/admin/user/edit/{{ user.id }}" class="btn btn-md btn-secondary" title="Modifier le rôle">
                                        <i class="fas fa-user-tag"></i>
                                    </a>
                                    <a href="#" class="btn btn-md btn-danger delete-link" title="Supprimer l'article" data-toggle="modal" data-target="#delModal" data-id={{ user.id }}>
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Mis à jour le {{ user.created_at| date("d/m/Y") }}</div>
    </div>

    {% include 'admin/layout/modal_delete.html.twig' %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="/js/modal.js"></script>
    {% endblock %}
{% endblock %}