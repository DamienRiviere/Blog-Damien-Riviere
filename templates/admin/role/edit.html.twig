{% extends 'admin/layout/default.html.twig' %}

{% block title %}Modification du rôle {{ role.name }} - Administration{% endblock %}

{% block body %}
   <ol class="breadcrumb breadcrumb-sm">
        <li class="breadcrumb-item">
            <a href="/admin/roles">Liste des rôles</a>
        </li>
        <li class="breadcrumb-item active">Modification du rôle {{ role.name }}</li>
    </ol>

    <form action="/admin/role/edit/{{ role.id }}" method="post">
        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="alert bg-light">
                    <h2 class="h5 mb-3">Modification du rôle {{ role.name }}</h2>
                    <div class="form-group">
                        <label for="name">Nom</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Nom du rôle" required value="{{ role.name }}">
                    </div>
                </div>
            </div> 
        </div>

        <button type="submit" class="btn btn-success btn-block">Envoyer</button>
    </form>
{% endblock %}